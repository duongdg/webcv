<!-- About section -->
@model List<Model.Framework.Profile>
<div class="about" id="about">
    <div class="container">
        <h3 class="text-center">About Me</h3>
        @foreach (var item in Model)
        {
            <div class="col-md-5 about_left">
                <ul class="address">
                    <li>
                        <ul class="agileits-address-text ">
                            <li><b>Name</b></li>
                            <li>@item.FullName</li>
                        </ul>
                    </li>
                    <li>
                        <ul class="agileits-address-text ">
                            <li><b>D.O.B</b></li>
                            <li>@item.DateofBirth</li>
                        </ul>
                    </li>
                    <li>
                        <ul class="agileits-address-text">
                            <li><b>PHONE</b></li>
                            <li>@item.Phone</li>
                        </ul>
                    </li>
                    <li>
                        <ul class="agileits-address-text">
                            <li><b>JOB</b></li>
                            <li>@item.TargetJob</li>
                        </ul>
                    </li>
                    <li>
                        <ul class="agileits-address-text">
                            <li><b>EXPERIENCE</b></li>
                            <li>+4 Years</li>
                        </ul>
                    </li>
                    <li>
                        <ul class="agileits-address-text">
                            <li><b>ADDRESS </b></li>
                            <li>@item.Adress</li>
                        </ul>
                    </li>
                    <li>
                        <ul class="agileits-address-text">
                            <li><b>WEBSITE </b></li>
                            <li><a href="#">www.mywebsite.com</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="w3-socials about-social">
                    <ul>
                        <li>
                            <a href="#"><span class="fa fa-facebook"></span></a>
                        </li>
                        <li>
                            <a href="#"><span class="fa fa-vk"></span></a>
                        </li>
                        <li>
                            <a href="#"><span class="fa fa-pinterest-p"></span></a>
                        </li>
                        <li>
                            <a href="#"><span class="fa fa-twitter"></span></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-7 about_right">
                <h3>Hi, I am @item.FullName</h3>
                <h4>Web designer : +4 years of coding experience</h4>
                <p>
                     Descreptiom: @item.Descreption
                </p>
                <p>
                   Hobbies: @item.Hobbies
                </p>
                <ul>
                    <li><a href="#contact" class="w3ls_more scroll">Hire Me</a></li>
                    <li><a href="#contact" class="w3l scroll">Contact Me</a></li>
                </ul>
            </div>
            <div class="clearfix"></div>
        }
    </div>
</div>
<!-- //About section -->
